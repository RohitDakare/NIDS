{
  "rate_limiting": {
    "enabled": true,
    "requests_per_minute": 100,
    "burst_limit": 200,
    "blocked_duration_minutes": 15
  },
  "authentication": {
    "enabled": true,
    "token_expiry_hours": 24,
    "require_https": true,
    "max_failed_attempts": 5,
    "lockout_duration_minutes": 30
  },
  "logging": {
    "audit_enabled": true,
    "log_sensitive_data": false,
    "max_log_size_mb": 100,
    "log_retention_days": 30,
    "security_log_level": "INFO"
  },
  "validation": {
    "strict_input_validation": true,
    "sanitize_logs": true,
    "max_request_size_mb": 10,
    "allowed_file_extensions": [".joblib", ".pkl", ".json", ".csv"],
    "max_string_length": 1000
  },
  "ssl": {
    "enabled": true,
    "cert_path": "certs/nids.crt",
    "key_path": "certs/nids.key",
    "min_tls_version": "1.2"
  },
  "database": {
    "require_auth": true,
    "connection_timeout_seconds": 30,
    "max_connections": 100,
    "enable_encryption": true
  },
  "model_security": {
    "verify_integrity": true,
    "checksum_algorithm": "sha256",
    "allow_model_updates": true,
    "require_signed_models": false
  },
  "network": {
    "allowed_interfaces": ["Ethernet", "Wi-Fi", "Loopback Pseudo-Interface 1"],
    "max_packet_size": 65535,
    "capture_timeout_seconds": 30
  }
}
