# Network Interface Configuration
INTERFACE=eth0
PACKET_COUNT=1000
TIMEOUT=30

# ML Model Settings
MODEL_PATH=app/ml_models/nids_model.joblib
CONFIDENCE_THRESHOLD=0.8
MODEL_TYPE=random_forest

# MongoDB Database Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB_NAME=nids
MONGODB_USERNAME=nids_user
MONGODB_PASSWORD=change-me
MONGODB_SSL_ENABLED=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/nids.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
TRUSTED_HOSTS=localhost,127.0.0.1

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
API_KEY=change-me

# Performance Configuration
MAX_ALERTS=10000
MAX_PACKETS_BUFFER=10000
MAX_CONNECTIONS=10000

# Detection Configuration
RATE_LIMIT_PACKETS_PER_SECOND=100
RATE_LIMIT_BYTES_PER_SECOND=1000000
CORRELATION_WINDOW_MINUTES=5

# Frontend Configuration
NEXT_PUBLIC_NIDS_API_URL=http://localhost:8000/api/v1