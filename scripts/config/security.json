{
  "rate_limiting": {
    "enabled": true,
    "requests_per_minute": 100,
    "burst_limit": 200
  },
  "authentication": {
    "enabled": true,
    "token_expiry_hours": 24,
    "require_https": true
  },
  "logging": {
    "audit_enabled": true,
    "log_sensitive_data": false,
    "max_log_size_mb": 100
  },
  "validation": {
    "strict_input_validation": true,
    "sanitize_logs": true,
    "max_request_size_mb": 10
  }
}